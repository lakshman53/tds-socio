@{
    ViewBag.Title = "Add Employee";
    ViewBag.Description = "Add a new employee";
    Layout = "~/Views/Shared/_Default.cshtml";
}

@{

    
    

    
    using (Html.BeginForm("ProcessForm", "Home", FormMethod.Post))
    {

        <div class="row">
            <div class="col-lg-offset-1 col-sm-offset-1 col-xs-offset-2 col-lg-10 col-sm-10 col-xs-12">

                @using (WidgetBuilder<dynamic> widget = Html.Bootstrap().Begin(new Widget().Caption("Primary Information")))
                {
                    using (WidgetSectionPanel header = widget.BeginHeader())
                    {
                    }
                    using (widget.BeginBody())
                    {
                        <div class="row">

                            <div class="col-lg-12 col-sm-12 col-xs-12">
                             
                                   <div class="row">


                                    <div class="col-lg-4 col-sm-4 col-xs-6">

                                        <div class="form-group">
                                            <input type="text" class="form-control" id="userameInput1" placeholder="First Name">
                                        </div>
                                    </div>

                                    <div class="col-lg-4 col-sm-4 col-xs-6">


                                        <div class="form-group">
                                            <input type="text" class="form-control" id="userameInput2" placeholder="Middle Name">

                                        </div>
                                    </div>

                                    <div class="col-lg-4 col-sm-4 col-xs-6">


                                        <div class="form-group">
                                            <input type="text" class="form-control" id="userameInput3" placeholder="Last Name">

                                        </div>

                                    </div>

                                </div>

                                <div class="row">


                                    <div class="col-lg-4 col-sm-4 col-xs-6">

                                        <div class="form-group">
                                            <input type="text" class="form-control" id="userameInput1" placeholder="Employee Number">
                                        </div>
                                    </div>

                                    <div class="col-lg-4 col-sm-4 col-xs-6">


                                        <div class="form-group">
                                            <input type="text" class="form-control" id="userameInput2" placeholder="Client Employee Number">

                                        </div>
                                    </div>

                                    <div class="col-lg-4 col-sm-4 col-xs-6">


                                        <div class="form-group">
                                            <input type="text" class="form-control" id="userameInput3" placeholder="Designation">

                                        </div>

                                    </div>

                                </div>

                                <div class="row">


                                    <div class="col-lg-4 col-sm-4 col-xs-6">

                                        <select id="gender" name="gender" style="width:100%">
                                            <option value="-1">Select Gender</option>
                                            <option value="M">Male</option>
                                            <option value="F">Female</option>
                                        </select>
                                    </div>

                                    <div class="col-lg-4 col-sm-4 col-xs-6">


                                        <div class="form-group">
                                            <div class="input-group">
                                                <input class="form-control date-picker" placeholder="Date of Birth" id="id-date-picker-1" type="text" data-date-format="dd-mm-yyyy">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="col-lg-4 col-sm-4 col-xs-6">


                                        <div class="form-group">
                                            <div class="input-group">
                                                <input class="form-control date-picker" placeholder="Hire Date" id="id-hire-date-picker" type="text" data-date-format="dd-mm-yyyy">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                            </div>

                                        </div>
                                    </div>

                                </div>

                                



                            </div>

                        </div>
                    }
                }


                

            </div>
        </div>
    <div class="row">
        <div class="col-lg-offset-1 col-sm-offset-1 col-xs-offset-2 col-lg-10 col-sm-10 col-xs-12">

            @using (WidgetBuilder<dynamic> widget = Html.Bootstrap().Begin(new Widget().Caption("Store Information")))
            {
                using (WidgetSectionPanel header = widget.BeginHeader())
                {
                }
                using (widget.BeginBody())
                {
                    
                    <div class="row">
     
                        <div class="col-lg-12 col-sm-12 col-xs-12">

                            @Html.DropDownList("regions", ViewData["regions"] as SelectList, new { @id = "region", style = "width:100%;" })

                        </div>

</div>
                <br />
                
    <div class="row">

        <div class="col-lg-3 col-sm-3 col-xs-6">

            <input type="text" class="form-control" id="userameInput3" placeholder="Max Distance from Store">

        </div>

        <div class="col-lg-3 col-sm-3 col-xs-6">

            <input type="text" class="form-control" id="starttime" placeholder="Office Start">

        </div>
        <div class="col-lg-3 col-sm-3 col-xs-6">

            <input type="text" class="form-control timepicker1" id="endtime" placeholder="Office End">

        </div>
        <div class="col-lg-3 col-sm-3 col-xs-6">

            <select id="weeklyoff" name="weeklyoff" style="width:100%">
                <option value="-1">Weekly Off</option>
                <option value="0">Sunday</option>
                <option value="1">Monday</option>
                <option value="2">Tuesday</option>
                <option value="3">Wednesday</option>
                <option value="4">Thursday</option>
                <option value="5">Friday</option>
                <option value="6">Saturday</option>
            </select>

        </div>

    </div>
          
                }
            }




    </div>
    </div>
    
    <div class="row">
        <div class="col-lg-offset-1 col-sm-offset-1 col-xs-offset-2 col-lg-10 col-sm-10 col-xs-12">

            @using (WidgetBuilder<dynamic> widget = Html.Bootstrap().Begin(new Widget().Caption("Contact Information")))
            {
                using (WidgetSectionPanel header = widget.BeginHeader())
                {
                }
                using (widget.BeginBody())
                {
                    <div class="row">



                        <div class="col-lg-12 col-sm-12 col-xs-12">
                            <div class="row">


                                <div class="col-lg-4 col-sm-4 col-xs-6">

                                    <div class="form-group">
                                        <input type="text" class="form-control" id="userameInput1" placeholder="Official Email Address">
                                    </div>
                                </div>

                                <div class="col-lg-4 col-sm-4 col-xs-6">


                                    <div class="form-group">
                                        <input type="text" class="form-control" id="userameInput2" placeholder="Client Email Address">

                                    </div>
                                </div>

                                <div class="col-lg-4 col-sm-4 col-xs-6">


                                    <div class="form-group">
                                        <input type="text" class="form-control" id="userameInput3" placeholder="Personal Email Address">

                                    </div>

                                </div>

                            </div>

                            </div>
                        <div class="col-lg-12 col-sm-12 col-xs-12">
                            <div class="row">


                                <div class="col-lg-4 col-sm-4 col-xs-6">

                                    <input type="text" class="form-control" id="userameInput3" placeholder="Mobile Number">

                                </div>

                                <div class="col-lg-4 col-sm-4 col-xs-6">


                                    <input type="text" class="form-control" id="userameInput3" placeholder="Landline Number">
                                </div>


                                <div class="col-lg-4 col-sm-4 col-xs-6">


                                    <div class="form-group">
                                        <input type="text" class="form-control" id="userameInput3" placeholder="Emergency Contact Number">

                                    </div>

                                </div>

                            </div>
</div>

                        

                    </div>
                }
            }


        </div>
    </div>

    <div class="row">
        <div class="col-lg-offset-4 col-sm-offset-4 col-xs-offset-4 ">
            <button class="btn btn-success" type="submit">Create Employee</button>
            <button class="btn btn-info" type="reset">Clear</button>
        </div>
    </div>
    }
}


@section PageScripts{

<script src="/assets/js/datetime/bootstrap-datepicker.js"></script>
<script src="/assets/js/datetime/bootstrap-timepicker.js"></script>
<script src="/assets/js/select2/select2.js"></script>

    <script>
        
        $("#region").select2();
        $("#gender").select2();
        $("#weeklyoff").select2();
        $('#starttime').timepicker();
        $('#endtime').timepicker();
        $('.date-picker').datepicker();

    </script>
}
